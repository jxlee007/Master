---
import Layout from "../layouts/Layout.astro";
import AnimatedHeader from "../components/AnimatedHeader";
import { Button } from "@/components/ui/button";
import { Card } from "@/components/ui/card";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import { Image as AstroImage } from "astro:assets";
import ThemeToggle from "@/components/ThemeToggle.astro";
import { Badge } from "@/components/ui/badge";
import { FaGithub, FaReact } from "react-icons/fa";
import { IoLogoLinkedin } from "react-icons/io";
import { MdMail } from "react-icons/md";

const DefaultIcon = FaReact;

const technicalSkills = [
  { label: "Express.js" },
  { label: "Node.js" },
  { label: "React.js" },
  { label: "Tailwind CSS" },
  { label: "MongoDB" },
  { label: "JavaScript Libraries" },
  { label: "Android SDK" },
  { label: "Python (Programming Language)" },
  { label: "Java" },
  { label: "Github" },
  { label: "Web Development" },
  { label: "GreenSock Animation Platform (GSAP)" },
  { label: "JavaScript" },
  { label: "Responsive Web Design" },
  { label: "Microsoft Visual Studio Code" },
  { label: "Cascading Style Sheets (CSS)" },
  { label: "HTML5" },
  { label: "Firebase" },
];

const managerialSkills = [
  { label: "Confluence" },
  { label: "Project Management" },
  { label: "Scrum" },
  { label: "Agile Methodologies" },
  { label: "Functional Requirements" },
  { label: "Data-flow Diagrams" },
  { label: "Project Planning" },
  { label: "Software Development Life Cycle (SDLC)" },
  { label: "Jira" },
  { label: "Responsiveness" },
  { label: "Easily Adaptable" },
  { label: "Computer Literacy" },
  { label: "Attention to Detail" },
];

const experiences = [
  {
    company: "Kit Solutions",
    role: "IT Business Analyst",
    period: "April 2024 - Present",
    description:
      "Working as an IT Business Analyst in Vadodara, Gujarat, India.",
  },
  {
    company: "InternPe",
    role: "Web Development Intern",
    period: "November 2023",
    description:
      "Completed a remote internship for web development in Jaipur, Rajasthan, India.",
  },
];

const projects = [
  {
    title: "Enterprise Resource Planning Implementation",
    description:
      "Hands-on experience in implementing ERP system like JIRA and improving operational efficiency.",
    image:
      "https://images.unsplash.com/photo-1460925895917-afdab827c52f?q=80&w=2426&auto=format&fit=crop",
    tags: ["ERP", "Process Improvement", "Change Management"],
  },
  {
    title: "Aviation Information Management Dashboard",
    description:
      "Worked Flight Plan Management dashboard for ATC Operations working in Aviation Industry.",
    image:
      "https://images.unsplash.com/photo-1551288049-bebda4e38f71?q=80&w=2340&auto=format&fit=crop",
    tags: ["Data Analytics", "Business Intelligence", "Visualization"],
  },
  {
    title: "Customer Journey Mapping",
    description:
      "Created detailed product roadmaps leading to quality delivery and improvement in customer satisfaction.",
    image:
      "https://images.unsplash.com/photo-1552664730-d307ca884978?q=80&w=2340&auto=format&fit=crop",
    tags: ["JIRA", "Customer Experience", "Process Design"],
  },
];
---

<Layout title="Business Analyst Portfolio">
  <div class="w-full h-screen flex justify-between">
    <div id="scroll" class="w-1/2 h-screen -z-1 ">
      <!-- Hero Section -->
      <section
        class="relative h-screen flex items-center justify-center overflow-hidden"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-primary/10 to-secondary/10 dark:from-primary/5 dark:to-secondary/5"
        >
        </div>
        <div class="container px-4 mx-auto text-center z-10">
          <AnimatedHeader client:load> Jagmohan Singh Malhi </AnimatedHeader>
          <p class="text-xl md:text-2xl text-muted-foreground -mt-4 mb-8">
            IT Business Analyst | FullStack Web Developer
          </p>
          <Button size="icon" asChild>
            <a
              href="#contact"
              class="text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-3xl text-2xl px-6 py-3 text-center me-2 mb-2"
              >Get in Touch</a
            >
          </Button>
        </div>
      </section>
  
      <!-- About Section -->
      <section id="about" class="py-20 bg-secondary/10">
        <div class="container px-4 mx-auto">
          <div class="grid md:grid-cols-2 gap-12 items-center">
            <div class="space-y-6">
              <h2 class="text-3xl font-bold">About Me</h2>
              <p class="text-muted-foreground">
                With over a year of experience as an junior IT Business Analyst, I
                have learned many important things in Scrum and Agile
                methodologies that help me to bridge the gap between business
                needs and technological solutions. My expertise lies in
                requirements gathering, data analysis, process improvement, and
                effective stakeholder communication. I combine my technical
                knowledge with business acumen to deliver solutions that drive
                organizational success.
              </p>
              <div class="flex space-x-4">
                <a
                  href="https://www.linkedin.com/in/jagmohan-singh-malhi-a67805243"
                  target="_blank"
                  class="text-primary text-white bg-sky-700 p-4 rounded-md"
                >
                  <IoLogoLinkedin className="w-6 h-6" />
                </a>
                <a href="mailto:jagmohansinghmalhi20@gmail.com">
                  <MdMail className="w-6 h-6" />
  
                </a>
                <a
                  href="https://github.com/jxlee007"
                  target="_blank"
                  class="text-primary text-white bg-gray-800 p-4 rounded-md"
                >
                  <FaGithub className="w-6 h-6" />
                </a>
              </div>
            </div>
          </div>
        </div>
      </section>
  
      <!-- Skills Section -->
      <section id="skills" class="py-20">
        <div class="container px-4 mx-auto">
          <h2 class="text-3xl font-bold text-center mb-12">Core Competencies</h2>
          <div class="grid md:grid-cols-2 gap-12">
            <!-- Technical Skills -->
            <div>
              <h3 class="text-2xl font-semibold mb-6">Technical Skills</h3>
              <div class="flex flex-wrap gap-4">
                {
                  technicalSkills.map((skill) => (
                    <Badge variant="secondary" className="px-4 py-2">
                      {skill.label}
                    </Badge>
                  ))
                }
              </div>
            </div>
  
            <!-- Managerial Skills -->
            <div>
              <h3 class="text-2xl font-semibold mb-6">Managerial Skills</h3>
              <div class="flex flex-wrap gap-4">
                {
                  managerialSkills.map((skill) => (
                    <Badge variant="secondary" className="px-4 py-2">
                      {skill.label}
                    </Badge>
                  ))
                }
              </div>
            </div>
          </div>
        </div>
      </section>
  
      <!-- Experience Section -->
      <section id="experience" class="py-20 bg-secondary/10">
        <div class="container px-4 mx-auto">
          <h2 class="text-3xl font-bold text-center mb-12">
            Professional Journey
          </h2>
          <div class="space-y-8">
            {
              experiences.map((exp) => (
                <Card className="px-6 py-4">
                  <div class="flex flex-col md:flex-row md:items-center justify-between mb-4">
                    <div>
                      <h3 class="text-xl font-semibold">{exp.role}</h3>
                      <p class="text-primary">{exp.company}</p>
                    </div>
                    <span class="text-muted-foreground">{exp.period}</span>
                  </div>
                  <p class="text-muted-foreground">{exp.description}</p>
                </Card>
              ))
            }
          </div>
        </div>
      </section>
  
      <!-- Projects Section -->
      <section id="projects" class="py-20">
        <div class="container px-4 mx-auto">
          <h2 class="text-3xl font-bold text-center mb-12">Featured Projects</h2>
          <div class="grid md:grid-cols-3 gap-8">
            {
              projects.map((project) => (
                <Card className="overflow-hidden group">
                  <div class="relative h-48 overflow-hidden">
                    <AstroImage
                      src={project.image}
                      alt={project.title}
                      width={800}
                      height={100}
                      class="w-full h-full object-cover transition-transform group-hover:scale-105"
                    />
                  </div>
                  <div class="p-6">
                    <h3 class="text-xl font-semibold mb-2">{project.title}</h3>
                    <p class="text-muted-foreground mb-4">
                      {project.description}
                    </p>
                    <div class="flex flex-wrap gap-2">
                      {project.tags.map((tag) => (
                        <Badge variant="secondary">{tag}</Badge>
                      ))}
                    </div>
                  </div>
                </Card>
              ))
            }
          </div>
        </div>
      </section>
  
      <!-- Contact Section -->
      <section id="contact" class="py-20 bg-secondary/10">
        <div class="container px-4 mx-auto">
          <div class="max-w-2xl mx-auto">
            <h2 class="text-3xl font-bold text-center mb-12">Get in Touch</h2>
            <form
              action="#"
              class="w-full md:w-1/2 border border-red-500 p-6 bg-gray-900"
            >
              <h2 class="text-2xl pb-3 font-semibold">Send Message</h2>
              <div>
                <div class="flex flex-col mb-3">
                  <label for="name">Name</label>
                  <input
                    type="text"
                    id="name"
                    class="px-3 py-2 bg-gray-800 border border-gray-900 focus:border-red-500 focus:outline-none focus:bg-gray-800 focus:text-red-500"
                    autocomplete="off"
                  />
                </div>
                <div class="flex flex-col mb-3">
                  <label for="email">Email</label>
                  <input
                    type="text"
                    id="email"
                    class="px-3 py-2 bg-gray-800 border border-gray-900 focus:border-red-500 focus:outline-none focus:bg-gray-800 focus:text-red-500"
                    autocomplete="off"
                  />
                </div>
                <div class="flex flex-col mb-3">
                  <label for="message">Message</label>
                  <textarea
                    rows="4"
                    id="message"
                    class="px-3 py-2 bg-gray-800 border border-gray-900 focus:border-red-500 focus:outline-none focus:bg-gray-800 focus:text-red-500"
                  ></textarea>
                </div>
              </div>
              <div class="w-full pt-3">
                <button
                  type="submit"
                  class="w-full bg-gray-900 border border-red-500 px-4 py-2 transition duration-50 focus:outline-none font-semibold hover:bg-red-500 hover:text-white text-xl cursor-pointer"
                >
                  Send
                </button>
              </div>
            </form>
          </div>
        </div>
      </section>
    </div>
    <div class="absolute right-0 w-1/2 h-screen">
      <AstroImage
        id="fixed-image"
        src="https://images.unsplash.com/photo-1560250097-0b93528c311a?q=80&w=2574&auto=format&fit=crop"
        alt="Profile picture"
        width={480}
        height={800}
        class="w-full h-full object-cover transition-transform group-hover:scale-105"
      />
    </div> 
  </div>
</Layout>
