  { label: "Easily Adaptable", icon: FaReact || DefaultIcon }, // Replace with suitable icon
  { label: "Computer Literacy", icon: FaReact || DefaultIcon }, // Replace with suitable icon
  { label: "Attention to Detail", icon: FaReact || DefaultIcon }, // Replace with suitable icon
